@using RealtyHub.Core.Models
@using RealtyHub.Web.Pages.Condominiums

<MudDialog>
    <DialogContent>
        <List OnCondominiumSelected="SelectCondominium" RowStyle="cursor: pointer" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="CloseDialog" Color="Color.Primary">Fechar</MudButton>
    </DialogActions>
</MudDialog>

@code
{
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public EventCallback<Condominio> OnCondominiumSelected { get; set; }

    void CloseDialog() => MudDialog.Close();

    public async Task SelectCondominium(Condominio condominio)
    {
        if (OnCondominiumSelected.HasDelegate)
            await OnCondominiumSelected.InvokeAsync(condominio);

        MudDialog.Close(DialogResult.Ok(condominio));
    }
}