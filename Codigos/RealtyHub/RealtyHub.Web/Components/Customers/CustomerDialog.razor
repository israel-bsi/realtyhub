@using RealtyHub.Core.Models
@using RealtyHub.Web.Pages.Customers

<MudDialog>
    <DialogContent>
        <List OnCustomerSelected="SelectCustomer" RowStyle="cursor: pointer" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="CloseDialog" Color="Color.Primary">Fechar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] 
    MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public EventCallback<Cliente> OnCustomerSelected { get; set; }

    void CloseDialog() => MudDialog.Close();

    public async Task SelectCustomer(Cliente cliente)
    {
        if (OnCustomerSelected.HasDelegate)
            await OnCustomerSelected.InvokeAsync(cliente);

        MudDialog.Close(DialogResult.Ok(cliente));
    }
}