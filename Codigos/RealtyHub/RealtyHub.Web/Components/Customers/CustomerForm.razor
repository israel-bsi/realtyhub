@using RealtyHub.Core.Extensions
@inherits CustomerFormComponent

<PageTitle>@Operation Cliente</PageTitle>

<MudText Typo="Typo.h4">@Operation Cliente</MudText>

@if (IsBusy)
{
    <SkeletonWave />
}
else
{
    <MudPaper Class="pa-8 mt-4" Elevation="2">
        <EditForm OnValidSubmit="OnValidSubmitAsync" EditContext="@EditContext">
            <ObjectGraphDataAnnotationsValidator />

            <MudText Class="mb-6" Typo="Typo.h6">Dados Pessoais</MudText>

            <MudGrid>
                <MudItem lg="4" md="5" xs="12">
                    <MudRadioGroup T="ETipoPessoa"
                                   Value="InputModel.TipoPessoa"
                                   ValueChanged="OnPersonTypeChanged"
                                   Class="flex-center">
                        <MudStack Row="true" Spacing="1">
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                <MudIcon Icon="@Icons.Material.Filled.Person"></MudIcon>
                                <MudRadio Value="ETipoPessoa.Fisica">
                                    @(ETipoPessoa.Fisica.GetDisplayName())
                                </MudRadio>
                            </MudStack>
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                <MudIcon Icon="@Icons.Material.Filled.Business"></MudIcon>
                                <MudRadio Value="ETipoPessoa.Juridica">
                                    @(ETipoPessoa.Juridica.GetDisplayName())
                                </MudRadio>
                            </MudStack>
                        </MudStack>
                    </MudRadioGroup>
                </MudItem>

                @if (InputModel.TipoPessoa == ETipoPessoa.Fisica)
                {
                    <MudItem lg="3" md="4" xs="12">
                        <EnumSelect TEnum="ETipoStatusCivil"
                                    Label="Estado Civil"
                                    @bind-SelectedValue="InputModel.TipoStatusCivil"
                                    Class="ml-4">
                        </EnumSelect>
                    </MudItem>
                }

                <MudItem lg="3" md="5" xs="12">
                    <EnumSelect TEnum="ETipoCliente"
                                Label="Tipo do cliente"
                                @bind-SelectedValue="InputModel.TipoCliente"
                                Class="ml-4">
                    </EnumSelect>
                </MudItem>
            </MudGrid>

            <MudGrid Class="mt-2">
                <MudItem lg="2" md="3" xs="12">
                    <MudTextField T="string"
                                  Label="@DocumentType"
                                  @bind-Value="InputModel.NumeroDocumento"
                                  For="@(() => InputModel.NumeroDocumento)"
                                  Mask="DocumentCustomerMask"
                                  OnBlur="OnBlurDocumentTextField"
                                  ErrorText="@ErrorText"
                                  Error="Error"
                                  Immediate="true"
                                  @key="DocumentCustomerMask"
                                  InputType="InputType.Text" />
                </MudItem>

                <MudItem lg="5" md="6" xs="12">
                    <MudTextField T="string"
                                  Label="@(InputModel.TipoPessoa ==
                                           ETipoPessoa.Fisica ? "Nome" : "Razão Social")"
                                  @bind-Value="InputModel.Nome"
                                  For="@(() => InputModel.Nome)"
                                  InputType="InputType.Text" />
                </MudItem>

                @if (InputModel.TipoPessoa == ETipoPessoa.Fisica)
                {
                    <MudItem lg="3" md="5" xs="12">
                        <MudTextField T="string"
                                      Label="RG"
                                      @bind-Value="InputModel.Rg"
                                      For="@(() => InputModel.Rg)"
                                      MaxLength="20"
                                      InputType="InputType.Text" />
                    </MudItem>

                    <MudItem lg="3" md="4" xs="12">
                        <MudTextField T="string"
                                      Label="Orgão expedidor"
                                      @bind-Value="InputModel.AutoridadeEmissora"
                                      For="@(() => InputModel.AutoridadeEmissora)"
                                      InputType="InputType.Text" />
                    </MudItem>

                    <MudItem lg="3" md="4" xs="12">
                        <MudDatePicker Label="Data da expedição do RG"
                                       @bind-Date="InputModel.DataEmissaoRg"
                                       For="@(() => InputModel.DataEmissaoRg)"/>
                    </MudItem>

                    <MudItem lg="3" md="4" xs="12">
                        <MudTextField T="string"
                                      Label="Nacionalidade"
                                      @bind-Value="InputModel.Nacionalidade"
                                      For="@(() => InputModel.Nacionalidade)"
                                      MaxLength="80"
                                      InputType="InputType.Text" />
                    </MudItem>

                    <MudItem lg="3" md="4" xs="12">
                        <MudTextField T="string"
                                      Label="Ocupação"
                                      @bind-Value="InputModel.Ocupacao"
                                      For="@(() => InputModel.Ocupacao)"
                                      MaxLength="80"
                                      InputType="InputType.Text" />
                    </MudItem>
                }
                else
                {
                    <MudItem lg="5" md="6" xs="12">
                        <MudTextField T="string"
                                      Label="Nome Fantasia"
                                      @bind-Value="InputModel.NomeFantasia"
                                      For="@(() => InputModel.NomeFantasia)"
                                      InputType="InputType.Text" />
                    </MudItem>
                }

                <MudItem lg="3" md="4" xs="12">
                    <MudTextField T="string"
                                  Label="Telefone"
                                  @bind-Value="InputModel.Telefone"
                                  For="@(() => InputModel.Telefone)"
                                  Mask="@Utility.Masks.Phone"
                                  InputType="InputType.Text" />
                </MudItem>

                <MudItem lg="5" md="6" xs="12">
                    <MudTextField T="string"
                                  Label="E-mail"
                                  @bind-Value="InputModel.Email"
                                  For="@(() => InputModel.Email)"
                                  InputType="InputType.Email" />
                </MudItem>
            </MudGrid>

            <AddressInput @bind-InputModel="InputModel.Endereco" />

            <MudButton ButtonType="ButtonType.Submit"
                       Variant="Variant.Filled"
                       Color="Color.Primary"
                       Class="mt-6"
                       StartIcon="@Icons.Material.Filled.Save">
                Salvar
            </MudButton>
        </EditForm>
    </MudPaper>
}