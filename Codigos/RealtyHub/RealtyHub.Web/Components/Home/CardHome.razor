@inherits CardHomeComponent

<MudItem lg="3" md="6" xs="12">
    <MudPaper Elevation="2">
        <MudCard Class="@("mb-2 " + Class)">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.body1">@Imovel.Titulo</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardMedia Image="@GetSrcPhoto()" Height="300" />
            <MudCardContent>
                <MudText Typo="Typo.body2">@Imovel.Descricao</MudText> <br />
                <MudText Typo="Typo.body2">@Imovel.Quarto @(Imovel.Quarto > 1 ? "Quartos" : "Quarto")</MudText> <br />
                <MudText Typo="Typo.body2">@Imovel.Banheiro @(Imovel.Banheiro > 1 ? "Banheiros" : "Banheiro")</MudText> <br />
                <MudText Typo="Typo.body2">@Imovel.Garagem @(Imovel.Garagem > 1 ? "Garagens" : "Garagem")</MudText> <br />
                <MudText Typo="Typo.body2">@Imovel.Area M²: </MudText> <br />
                <MudText Typo="Typo.body2">@Imovel.Preco Preço</MudText> <br />
            </MudCardContent>
            <MudCardActions>
                <MudTooltip Text="Enviar proposta">
                    <MudIconButton Icon="@Icons.Material.Filled.Send"
                                   Color="Color.Primary"
                                   OnClick="OnSendOfferClickedAsync" />
                </MudTooltip>
                <MudTooltip Text="Mais informações">
                    <MudIconButton Icon="@Icons.Material.Filled.Info"
                                   Color="Color.Primary"
                                   Href="@($"/imoveis/detalhes/{Imovel.Id}")" />
                </MudTooltip>
            </MudCardActions>
        </MudCard>
    </MudPaper>
</MudItem>