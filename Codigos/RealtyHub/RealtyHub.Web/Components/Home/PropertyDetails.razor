@page "/imoveis/detalhes/{id:long}"
@using RealtyHub.Core.Models
@inherits PropertyDetailsPage
@layout PublicLayout

<PageTitle>Detalhes - @InputModel.Titulo</PageTitle>

<MudPaper Elevation="2">
    <MudGrid @key="GridKey">
        <MudItem xs="24" sm="12">
            <MudCarousel ItemsSource="@InputModel.FotosImovel"
                         ShowArrows="true"
                         ShowBullets="true"
                         AutoCycle="false"
                         Style="height: 70vh; width: 100%;"
                         TData="FotoImovel">

                <ItemTemplate>
                    <div class="d-flex justify-center align-center" style="height: 100%;">
                        <MudImage Src="@($"{Configuration.BackendUrl}/photos/{context.Id}{context.Extensao}")"
                                  Style="max-width: 95%; max-height: 100%;"
                                  ObjectFit="ObjectFit.Contain" />
                    </div>
                </ItemTemplate>
            </MudCarousel>
        </MudItem>
    </MudGrid>
    
    <MudText Class="ml-5 mb-10 mt-10" Typo="Typo.h6">@InputModel.Titulo</MudText>
    
    <MudCard Elevation="3" Class="mb-10 mt-10">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">Descrição</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudText Class="mb-2" Typo="Typo.body1">@InputModel.Descricao</MudText>
            <MudText Class="mb-2">@InputModel.Quarto Quartos</MudText>
            <MudText Class="mb-2">@InputModel.Banheiro Banheiros</MudText>
            <MudText Class="mb-2">@InputModel.Garagem Garagem</MudText>
            <MudText Class="mb-2">@InputModel.Area M²</MudText>
            <MudText Class="mb-2">@InputModel.DetalhesTransacao</MudText>
        </MudCardContent>
    </MudCard>
    
    <MudCard Elevation="3" Class="mb-10 mt-10">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">Preço</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.body1">@InputModel.Preco.ToString("C")</MudText>
        </MudCardContent>
    </MudCard>
    
    <MudCard Elevation="3" Class="mb-10 mt-10">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">Localização</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.body1">@InputModel.Endereco.Bairro</MudText>
        </MudCardContent>
    </MudCard>
</MudPaper>