@using RealtyHub.Core.Extensions

@switch (StatusProposta)
{
    case EStatusProposta.Aceita:
        <MudChip T="Enum" Color="Color.Success">@StatusProposta.GetDisplayName()</MudChip>
        break;

    case EStatusProposta.Rejeitada:
        <MudChip T="Enum" Color="Color.Error">@StatusProposta.GetDisplayName()</MudChip>
        break;

    case EStatusProposta.EmAnalise:
        <MudChip T="Enum" Color="Color.Primary">@StatusProposta.GetDisplayName()</MudChip>
        break;
}

@code
{
    [Parameter, EditorRequired] 
    public EStatusProposta StatusProposta { get; set; }
}