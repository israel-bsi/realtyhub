@using RealtyHub.Core.Models

<EditForm Model="InputModel">
    <ObjectGraphDataAnnotationsValidator />

    <MudStack Row="true">
        <EnumSelect TEnum="ETipoPagamento"
                    Label="Tipo do pagamento"
                    @bind-SelectedValue="InputModel.TipoPagamento"
                    HelperText="Informe o tipo de pagamento"
                    ReadOnly="ReadOnly" />

        <MudTextField Label="Valor"
                      T="decimal"
                      Variant="Variant.Text"
                      Format="C"
                      @bind-Value="InputModel.Valor"
                      For="@(() => InputModel.Valor)"
                      HelperText="Valor deste pagamento"
                      ReadOnly="ReadOnly" />
        
        @if (InputModel.Parcelado)
        {
            <MudSelect T="int" 
                       Label="Parcelas"
                       ReadOnly="ReadOnly" 
                       @bind-Value="InputModel.QuantidadeParcelas" 
                       For="@(() => InputModel.QuantidadeParcelas)">
                @for (int i = 1; i <= 24; i++)
                {
                    var i1 = i;
                    <MudSelectItem Value="@i">@($"{i1}x")</MudSelectItem>
                }
            </MudSelect>
        }
        
        @if (InputModel.TipoPagamento != ETipoPagamento.Cheque
             && InputModel.TipoPagamento != ETipoPagamento.Fgts)
        {
            <MudCheckBox Label="Parcelado"
                         @bind-Value="InputModel.Parcelado"
                         For="@(() => InputModel.Parcelado)"
                         ReadOnly="ReadOnly">
            </MudCheckBox>
        }
    </MudStack>
</EditForm>

@code
{
    [CascadingParameter]
    public EditContext CurrentEditContext { get; set; } = null!;

    [Parameter]
    public EventCallback<List<Pagamento>> PaymentsChanged { get; set; }

    [Parameter]
    public long OfferId { get; set; }

    [Parameter]
    public Pagamento InputModel { get; set; } = null!;

    [Parameter]
    public List<Pagamento> Payments { get; set; } = null!;

    [Parameter]
    public bool ReadOnly { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await base.OnParametersSetAsync();
        await base.OnInitializedAsync();
    }
}