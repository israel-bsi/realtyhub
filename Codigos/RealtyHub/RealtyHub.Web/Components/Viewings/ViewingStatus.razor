@using RealtyHub.Core.Extensions

@switch (StatusVisita)
{
    case EStatusVisita.Agendada:
        <MudChip T="Enum" Color="Color.Primary">@StatusVisita.GetDisplayName()</MudChip>
        break;

    case EStatusVisita.Finalizada:
        <MudChip T="Enum" Color="Color.Success">@StatusVisita.GetDisplayName()</MudChip>
        break;

    case EStatusVisita.Cancelada:
        <MudChip T="Enum" Color="Color.Error">@StatusVisita.GetDisplayName()</MudChip>
        break;

}

@code
{
    [Parameter, EditorRequired]
    public EStatusVisita StatusVisita { get; set; }
}
