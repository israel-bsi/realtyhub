@inherits CardHomeComponent

<MudItem xs="8" sm="4">
    <MudPaper Elevation="2">
        <MudCard Class="@("mb-4 " + Class)">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.body2">@Property.Title</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardMedia Image="@GetSrcPhoto()" Height="250" />
            <MudCardContent>
                <MudText Typo="Typo.caption">@Property.Description</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudTooltip Text="Enviar proposta">
                    <MudIconButton Icon="@Icons.Material.Filled.Send"
                                   Color="Color.Primary"
                                   OnClick="OnSendOfferClickedAsync" />
                </MudTooltip>
                <MudTooltip Text="Mais informações">
                    <MudIconButton Icon="@Icons.Material.Filled.Info"
                                   Color="Color.Primary"
                                   Href="@($"/imoveis/detalhes/{Property.Id}")" />
                </MudTooltip>
            </MudCardActions>
        </MudCard>
    </MudPaper>
</MudItem>